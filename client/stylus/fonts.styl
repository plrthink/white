@import url('http://fonts.googleapis.com/css?family=Alegreya:400,400italic|Lato:400,700');

.white
  font-family 'Alegreya', serif
  font-size 23px

  header
    font-size 38px
    font-weight bold
    font-family 'Roboto', 'Helvetica Neue', sans-serif

  blockquote
    color #666

  h1
    font-size 28px
    margin 15px 0 5px
    font-family 'Roboto', 'Helvetica Neue', sans-serif

  h2
    font-size 24px
    margin 5px 0
    font-weight normal
    font-family 'Roboto', 'Helvetica Neue', sans-serif

  p
    margin-top 5px

  u
    text-shadow -2px 0px 0 #FFF, 2px 0px 0 #FFF, 0px -3px 0 #FFF, 0px -3px 0 #FFF
    text-decoration none
    background linear-gradient(0deg, white, white 5px, black 5px, black, white 6px)

  section u
    background none
    text-decoration underline
    text-shadow none

  a
    color #00BFFF
    text-decoration none
    border-radius 3px
    transition background 0.5s ease-in-out

    &:hover
      text-decoration none
      background rgb(240, 240, 240)

  img
    max-width 100%
    height auto
    display block



