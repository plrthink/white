popover-color = rgba(0, 0, 0, 0.9)
popover-font-color = #FFF
popover-font-size = 24px
popover-item-size = 30px
popover-padding = 5px

popover-size(item-count, item-size=popover-item-size, $padding=popover-padding)
  padding unit($padding, px)
  height unit(($padding * 2 + item-size), px)
  width unit(($padding * 2 + item-size * item-count), px)
  margin-left unit(-($padding * 2 + item-size * item-count)/2, px)

.white-popup
  
  position absolute
  transition opacity 250ms ease-out
  opacity 1

  top -999px
  left -999px

  &.hidden
    opacity 0

  .options
    background popover-color
    border-radius 4px
    overflow hidden
    transition width 0.25s ease-in-out, margin-left 0.25s ease-in-out
    popover-size(7)

    &.header-pop
      popover-size(4)

    &:before
      content ""
      position absolute

      height 5px
      width 0px
      bottom -15px
      left -5px

      border-width 5px
      border-style solid
      border-color popover-color transparent transparent

    button
      width 30px
      height 30px
      background transparent
      color popover-font-color
      font-family 'Alegreya', serif
      font-size popover-font-size
      font-weight normal
      border none
      display block
      float left
      
      &.link, &.underline
        text-decoration underline

      &.bold, &.header
        font-weight bold

      &.italic
        font-style italic


